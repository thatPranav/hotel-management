@model IEnumerable<HotelManagementEntity1.Models.Room>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Index</h2>
@if (User.Identity.Name.Equals("pranav")) {
<p>
    @Html.ActionLink("Create New", "Create")
</p>
}
<table class="table">
    <tr>
        <th>
            @Html.DisplayName("Type")
        </th>
        <th>
            @Html.DisplayName("No of rooms")
        </th>
        <th>
            @Html.DisplayName("Price")
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.roomType)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.roomNumber)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.roomPrice)
        </td>
@if (User.Identity.Name.Equals("pranav")) { 
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.roomId }) |
            @Html.ActionLink("Details", "Details", new { id=item.roomId }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.roomId })
        </td>
}
    </tr>
}

</table>
